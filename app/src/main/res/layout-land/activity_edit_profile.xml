<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" android:id="@+id/mainLL">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="33.3"
            android:padding="16dp"

            android:gravity="center|center_horizontal|center_vertical">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:srcCompat="@drawable/gesu"
                tools:src="@drawable/gesu"
                android:id="@+id/imageView3"
                android:contentDescription="@string/profile_picture"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0sp"
            android:layout_height="wrap_content" android:layout_weight="66.7">
        <TextView
                android:text="Account Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textAppearance="@style/CategoryTitle" android:layout_marginStart="16dp"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="66.7" android:gravity="center_horizontal">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp" app:srcCompat="@drawable/icons8_user_100"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>
                        <EditText
                                android:imeOptions="flagNoExtractUi"
                                android:id="@+id/editUsername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Username"
                                android:inputType="text"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp" app:srcCompat="@drawable/icons8_identification_documents_100"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Full Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <EditText
                                    android:imeOptions="flagNoExtractUi"
                                    android:id="@+id/editFirstName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:hint="First name"
                                    android:inputType="text"/>
                            <EditText
                                    android:imeOptions="flagNoExtractUi"
                                    android:id="@+id/editLastName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="50"
                                    android:hint="Last name"
                                    android:inputType="text"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="45sp" app:srcCompat="@drawable/icons8_mail_100"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>

                        <EditText
                                android:imeOptions="flagNoExtractUi"
                                android:id="@+id/editEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                android:inputType="text|textEmailAddress"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp" app:srcCompat="@drawable/icons8_location_100__1_"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>
                        <EditText
                                android:imeOptions="flagNoExtractUi"
                                android:id="@+id/editAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Address"
                                android:inputType="text"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" android:layout_marginBottom="10sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp" app:srcCompat="@drawable/icons8_gender_equality_100"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>
                        <Spinner
                                android:id="@+id/editGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:drawable/btn_dropdown"
                                android:spinnerMode="dropdown"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp" android:padding="5sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp" app:srcCompat="@drawable/icons8_length_100"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Heigth (cm)"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>

                        <EditText
                                android:imeOptions="flagNoExtractUi"
                                android:id="@+id/editHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Heigth"
                                android:inputType="text|numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp" android:padding="5sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp" app:srcCompat="@drawable/icons8_scale_100"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Weigth (Kg)"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>

                        <EditText
                                android:imeOptions="flagNoExtractUi"
                                android:id="@+id/editWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Weigth (Kg)"
                                android:inputType="text|numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" android:id="@+id/view"
                        android:layout_marginBottom="10sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                        android:layout_marginBottom="10sp">
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="45sp" app:srcCompat="@drawable/icons8_phone_100"
                            android:layout_weight="15" android:padding="5sp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="85">
                        <TextView
                                android:text="Phone Number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textAppearance="@style/ListItemTitle" android:layout_marginStart="4sp"/>

                        <EditText
                                android:imeOptions="flagNoExtractUi"
                                android:id="@+id/editPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Phone number"
                                android:inputType="text|phone"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:text="Version 1.0.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" android:layout_marginTop="30sp"
                        android:layout_marginBottom="30sp" android:textAlignment="center"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>