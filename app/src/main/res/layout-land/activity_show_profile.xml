<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="33.3"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical"

            android:padding="16dp">

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/profile_picture"
                tools:src="@drawable/gesu"
                tools:srcCompat="@drawable/gesu"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="66.7"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Account Info"
                android:textAppearance="@style/CategoryTitle"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="66.7"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_user_100"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="username_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_identification_documents_100"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Name"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/fullname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fullname_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="45sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_mail_100"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_location_100__1_"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="address_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10sp"
                        android:background="@android:color/darker_gray"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_gender_equality_100"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="gender_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_length_100"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="height_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="50sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_scale_100"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="weight_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10sp"
                        android:background="@android:color/darker_gray"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="45sp"
                            android:layout_weight="25"
                            android:padding="5sp"
                            app:srcCompat="@drawable/icons8_phone_100"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="75"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone Number"
                                android:textAppearance="@style/ListItemTitle"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="phone_placeholder"
                                android:textAppearance="@style/ListItemSubtitle"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30sp"
                        android:layout_marginBottom="30sp"
                        android:text="Version 1.0.1"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>