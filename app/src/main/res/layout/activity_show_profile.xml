<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical" android:id="@+id/profilePicture">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33.3"
            android:padding="16dp"

            android:gravity="center|center_horizontal|center_vertical">
        <ImageView
                android:layout_width="225dp"
                android:layout_height="180dp" tools:srcCompat="@drawable/gesu"
                tools:src="@drawable/gesu"
                android:id="@+id/imageView3"
                android:contentDescription="@string/profile_picture"
                />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="66.7" android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                android:layout_marginBottom="10sp">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60sp" app:srcCompat="@drawable/icons8_identification_documents_96"
                    android:layout_weight="25" android:padding="5sp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="75">
                <TextView
                        android:text="Full Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textAppearance="@style/ListItemTitle"/>
                <TextView
                        android:text="fullname_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/fullname"
                        android:textAppearance="@style/ListItemSubtitle"
                />
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:text="username_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/username"/>
        <TextView
                android:text="email_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/email"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                 android:layout_marginBottom="10sp">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60sp" app:srcCompat="@drawable/icons8_gender_equality_96"
                     android:layout_weight="25" android:padding="5sp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="75">
                <TextView
                        android:text="Gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textAppearance="@style/ListItemTitle"/>
                <TextView
                        android:text="gender_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/gender"
                        android:textAppearance="@style/ListItemSubtitle"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:weightSum="100"
                android:layout_marginBottom="10sp">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60sp" app:srcCompat="@drawable/icons8_location_96"
                    android:layout_weight="25" android:padding="5sp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="75">
                <TextView
                        android:text="Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textAppearance="@style/ListItemTitle"/>
                <TextView
                        android:text="address_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/address"
                        android:textAppearance="@style/ListItemSubtitle"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>