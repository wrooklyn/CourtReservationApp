<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.homeManager.UnfilteredHomeFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout17"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:autoSizePresetSizes="@array/autosize_heading_sizes"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/red_hat_display_bold"
                android:lineSpacingExtra="1sp"
                android:text="@string/available_heading"
                android:textAppearance="@style/discover_heading"
                app:layout_constraintBottom_toTopOf="@+id/textView21"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="6dp"
                android:autoSizePresetSizes="@array/autosize_subheading_sizes"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/roboto"
                android:lineSpacingExtra="1sp"
                android:text="@string/description1_subheading"
                android:textAppearance="@style/category_subheading"
                android:textColor="#192E34"
                app:layout_constraintBottom_toTopOf="@+id/available_recycler"
                app:layout_constraintEnd_toEndOf="@id/guideline8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/available_recycler"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/textView13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView21"
                app:reverseLayout="true"
                tools:listitem="@layout/sports_center_card_item" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:autoSizePresetSizes="@array/autosize_heading_sizes"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/red_hat_display_bold"
                android:lineSpacingExtra="1sp"
                android:text="@string/popular_heading"
                android:textAppearance="@style/category_subheading"
                app:layout_constraintBottom_toTopOf="@+id/textView22"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/available_recycler" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="7dp"
                android:autoSizePresetSizes="@array/autosize_subheading_sizes"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/roboto"
                android:lineSpacingExtra="1sp"
                android:text="@string/description2_subheading"
                android:textColor="#192E34"
                app:layout_constraintBottom_toTopOf="@+id/popular_recycler"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_recycler"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView22"
                app:reverseLayout="true"
                tools:listitem="@layout/sports_center_card_item" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.77" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>