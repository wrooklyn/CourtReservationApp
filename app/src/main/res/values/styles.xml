<resources>
    <!-- Other styles may already be defined here -->

    <style name="ListItemTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">"@font/open_sans_semibold"</item>
    </style>
    <style name="ListItemSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">"#474747"</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">"@font/open_sans"</item>
    </style>
    <style name="CategoryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">"@font/open_sans_semibold"</item>
    </style>
    <style name="discover_heading">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#192E34</item>
    </style>
    <style name="category_subheading">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#192E34</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat" >
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="sport_navigation_label" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
